<%= form_for @want, :html => { :class => "form-horizontal want" } do |f| %>

  <% if @want.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@want.errors.count, "error") %> prohibited this want from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @want.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'タイトル', :class => 'control-label col-lg-2' %>
    <div class="col-lg-6">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label '詳しく！', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :about, :class => 'form-control', :row => '10' %>
    </div>
    <%=f.error_span(:about) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit '作成', :class => 'btn btn-primary' %>
    </div>
  </div>

<% end %>
